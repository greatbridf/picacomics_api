{
    "compileOnSave": true,
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "src",
        "outDir": "build",
        "sourceMap": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
